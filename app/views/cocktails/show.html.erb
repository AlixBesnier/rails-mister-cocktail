<h1><%=@cocktail.name%></h1>

<h3>Ingredients :</h3>
  <ul><%@cocktail.doses.each do |dose|%>
    <li><%=dose.ingredient.name%>: <%= dose.description%> - <%= link_to "Delete", dose_path(dose),
              method: :delete,
              data: { confirm: "Are you sure?" } %></li>
    <%end%>
  </ul>

<h3>What's missing in the cocktail ?</h3>

<%= simple_form_for([@cocktail, @dose]) do |f| %>
  <%= f.error_notification %>

  <%= f.input :ingredient_id, collection: @ingredients %>
  <%= f.input :description %>

  <%= f.button :submit %>
<% end %>

<%= link_to("Create a new dose", new_cocktail_dose_path(@cocktail))%>

